<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link runat="server" rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    <link runat="server" rel="icon" href="favicon.ico" type="image/ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container" style="background-color:#fff090;">
                <a class="navbar-brand" asp-area="" asp-page="/Index">@ViewData["Title"]</a>
                <span>&nbsp;Click Doc to&nbsp;<button id="DBX_Open" onclick="onDBXOpen()">Open</button><button id="DBX_EMail" onclick="onDBXEMail()">EMail</button></span>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="background-color:#FFFFFF;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="background-color:#fff090;">
            &copy; 2020-2024 CStat. All rights reserved.
        </div>
    </footer>

    <script>

        var useEMail = false;
        onDBXOpen();

        function onDBXOpen() {
            let openBtn = document.getElementById("DBX_Open");
            let emailBtn = document.getElementById("DBX_EMail");
            openBtn.style.color = "black";
            openBtn.style.backgroundColor = "LawnGreen";
            openBtn.style.fontWeight = "bold";
            emailBtn.style.backgroundColor = "LightGray";
            emailBtn.style.fontWeight = "normal";
            useEMail = false;
        }
        function onDBXEMail() {
            let openBtn = document.getElementById("DBX_Open");
            let emailBtn = document.getElementById("DBX_EMail");
            emailBtn.style.color = "black";
            emailBtn.style.backgroundColor = "LawnGreen";
            emailBtn.style.fontWeight = "bold";
            openBtn.style.backgroundColor = "LightGray";
            openBtn.style.fontWeight = "normal";
            var useEMail = true;
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
