<div>
    <table class="table">
        <thead>
            <tr style="background-color: lightgray; font-weight:normal">
                <th>
                    @Html.DisplayNameFor(model => model.Task.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Task.Description)
                </th>
            </tr>
        </thead>
        <tbody>
           <tr style="font-weight:bold">
