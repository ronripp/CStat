@page
@model CStat.Pages.Vendors.IndexModel

@{
    ViewData["Title"] = "Business/Depts";
}

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].AcctId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].Poc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].Address)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Business)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Terms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fees)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApiLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.Country)
                </td>
                <td>
                    @{
                        var name = (item.Poc == null) ? "" : item.Poc.FirstName + " " + @item.Poc.LastName;
                    }
                    @name
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
