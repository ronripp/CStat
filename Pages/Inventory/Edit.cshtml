@page
@model CStat.EditInvModel

@{
    ViewData["Title"] = "Edit Item";
}

<head>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>

<style>

.ILabel {
    padding-right:2px;
}

.IValue {
    padding-top:4px;
     padding-left:2px;
}

</style>

<body>
    <div class="container">
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2 ILabel" for="idesc">Description: </label>
                <div class="col-sm-10 IValue">
                    <input type="text" id="idesc" size="60" value="@ViewBag.item.Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2 ILabel" for="iupc">UPC: </label>
                <div class="col-sm-10 IValue">
                    <input type="text" id="iupc" size="14" value="@ViewBag.item.Upc" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2 ILabel" for="iunits">Units: </label>
                <div class="col-sm-10 IValue">
                    <select id="iunits" style="height:2em">
                        @{int i = 0;
                        }
                        @foreach (var unit in ViewBag.units.Items)
                        {
                            @if (ViewBag.InventoryItem.Units == i)
                            {
                                <option value=@{i++;} selected>@unit</option>
                            }
                            else
                            {
                                <option value=@{i++;}>@unit</option>
                            }
                        }
                    </select>
                </div>
            </div>

