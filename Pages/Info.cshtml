            //$("a.navbar-brand").css("background-color", "#FFF090");
            //$(".navbar-toggler").css("background-color", "#FFF090");
        });

        function showMenu(menu) {
            $("#userSel10").hide();
            $("#userSel11").hide();
            $("#userSel12").hide();
            $("#userSel13").hide();
            switch (menu) {
                case 10:
                    $("#mTitle").html("<h3><b>Select Option Below:</b></h3>");
                    $("#userSel10").show();
                    break; 
                case 11:
                    $("#mTitle").html("<h3><b>How To... SOPs</b></h3>");
                    $("#userSel11").show();
                    break; 
                case 12:
                    $("#mTitle").html("<h3><b>Forms/Docs/Manuals...</b></h3>");
                    $("#userSel12").show();
                    break; 
                case 13:
                    $("#mTitle").html("<h3><b>Contacts/Lists...</b></h3>");
                    $("#userSel13").show();
                    break; 
            }
        }

        function openFileShare(folder, file) {
            var parameters = "{'Folder':'" + folder + "','File':'" + file + "'}";
            $.ajax({
                url: "/Docs?handler=FileShare",
                contentType: "application/json",
                dataType: "json",
                data: parameters,
                success: function (response) {
                    if (response.indexOf("ERROR~:") === -1) {
                        window.location.href = response;
                    }
                },
            });
        }

    </script>

</head>

