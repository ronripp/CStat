    <style>

        .camSize {
            width: 100%;
            height: auto;
        }

        .tbl {
            color: orange;
            width: 100%;
            font-size: 1.3em;
        }

        .pic {
        }

        .orth {
            color: yellow;
            padding-left: 4px;
            padding-right: 4px;
        }

        .diag {
            color: orange;
            padding-left: 4px;
            padding-right: 4px;
        }

        .ctr {
            color: lawngreen;
            padding-left: 4px;
            padding-right: 4px;
            font-weight: bold;
        }

        .cview {
            color: cyan;
            margin-left: 4px;
            padding-left: 6px;
            padding-right: 6px;
        }

        .topnav {
            color: lawngreen;
            margin-left: 20px;
            padding-left: 6px;
            padding-right: 6px;
            font-size: 1.3em;
            width: 100%;
        }
    </style>
</head>
<body onload="setCBHeight()" onresize="setCBHeight()" bgcolor="black" margin="0">
    <div>
        <table class="topnav">
