@page
@model CStat.Pages.Index1Model
@using Common
@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js" crossorigin="anonymous"></script>

    <style>
        html,
        body {
            height: 100%;
            margin: 0;
        }

        .box {
            display: flex;
            flex-flow: column;
            height: 100%;
        }

            .box .row {
                border: 1px solid #0313fc;
            }

                .box .row.header {
                    flex: 0 1 auto;
                }

                .box .row.content {
                    flex: 1 1 auto;
                }

                .box .row.footer {
                    flex: 0 1 40px;
                }

        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

        .hdrColors {
            background-color: #003000;
            color: yellow;
            width: 100%;
        }

        .cell {
            width: 50%;
            height: 50%;
            float: left;
        }

        .divTasks {
            background-image: @Model.GetTasksGradient();
            border: @Model.GetTasksBorder();
            border-radius: 25px;
        }

        .divEquip {
            background-image: @Model.GetEquipGradient();
            border: @Model.GetEquipBorder();
            border-radius: 25px;
        }

        .divStock {
            background-image: @Model.GetInvGradient();
            border: @Model.GetInvBorder();
            border-radius: 25px;
        }

        .divInfo {
            background-image: @Model.GetDocsGradient();
            border: @Model.GetDocsBorder();
            border-radius: 25px;
        }

        .tableC {
            width: 100%;
            height: 100%;
            text-align: center;
            font-weight: bold;
            font-size: 2em;
        }

        .tableH {
            width: 100%;
            height: 100%;
            text-align: center;
            font-weight: bold;
            font-size: 1.3em;
        }

        #btnSVG {
            min-width: 1.3em;
            min-height: 1.3em;
            max-width: 1.3em;
            max-height: 1.3em;
        }
        .setBtn {
            min-width: 1.3em;
            min-height: 1.3em;
            max-width: 1.3em;
            max-height: 1.3em;
        }

        body {
            background-color: black;
        }

        a {
            text-decoration: none !important;
            color: black;
        }

        .cuserClass {
            text-decoration: none !important;
            color: yellow;
        }

    </style>

    <script type="text/javascript">

        window.addEventListener("pageshow", function (event) {
            var historyTraversal = event.persisted ||
                (typeof window.performance != "undefined" &&
                    window.performance.navigation.type === 2);
            if (historyTraversal) {
                // Make sure to refresh top status page when returning to this page
                window.location.reload(true);
            }
        });

        function doSettings() {
            location.assign("/Settings");
        }

        function resetCS() {
            //window.dispatchEvent(new Event('resize'));
